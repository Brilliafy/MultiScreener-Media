<Window x:Name="aboutWindow" x:Class="MultiScreener_Media.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiScreener_Media"
        mc:Ignorable="d"
        Title="About" Height="110" Width="200" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Icon="Resources/1440792.ico" Loaded="aboutWindow_Loaded">
    <Grid Background="#FFD6D6D6">
        <Grid Height="40" Margin="0" VerticalAlignment="Top" Background="#FFAAAAAA">
            <TextBlock Margin="0,5,0,0" TextWrapping="Wrap" Text="Copyright © M. Mesanagrenos 2021 All Rights Reserved" TextAlignment="Center" FontWeight="Bold" FontSize="11"/>
        </Grid>
        <Separator Margin="0,40,0,0" VerticalAlignment="Top" Background="#FF7E7E7E"></Separator>
        <TextBlock x:Name="versionLabel" HorizontalAlignment="Left" Margin="5,0,0,8" TextWrapping="Wrap" Text="Version: X.X.X.X" VerticalAlignment="Bottom"/>
        <Button x:Name="visitWebsite" Content="Visit Website" HorizontalAlignment="Right" Margin="0,0,5,5" VerticalAlignment="Bottom" Width="76" Click="visitWebsite_Click"/>

    </Grid>
</Window>
